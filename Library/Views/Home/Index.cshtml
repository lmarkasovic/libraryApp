@model IEnumerable<Library.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h4>List of books</h4>
    <table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Where(a => a.BorrowerUserId == null)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (item.BorrowerUserId == null) 
            {  
                @Html.ActionLink("Borrow", "BorrowBook", new { bookId=item.Id, userId=1 }) 
            }            
            else if (item.BorrowerUserId == 1) 
            {  
                @Html.ActionLink("Return", "ReturnBook", new { bookId=item.Id, userId=1 }) 
            }
            else
            {
                <span>Borrowed by: </span>
                @Html.DisplayFor(modelItem => item.BorrowerNameSurname)
            }
            |
            @Html.ActionLink("Details", "GetBookDetails", new { bookId=item.Id })             
        </td>
    </tr>
}
</table>
<br>
<br>
<br>
<br>
<br>
</div>

